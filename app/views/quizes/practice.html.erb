<script type="text/javascript">
	var editor = CodeMirror(document.getElementById("editor"), {
	    mode:  "text/html",
	    lineNumbers: true
	});
	
	function fnGetUrl() {
		var domain = document.URL.match(/:\/\/(.[^/]+)/)[1];
		return 'http://' + domain;
	}

	$('button').button();
	$("#clock").stopwatch();

	var data = new Object();
	data.records = $.parseJSON('<%= @questions.to_json.html_safe %>');
	data.totalSize = data.records.length;
	ko.applyBindings(new Quiz(data, {editor:editor}, fnGetUrl()));
</script>



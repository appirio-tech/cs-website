<script type="text/javascript">
	$(function(){
		$.getJSON("http://csimage123.appspot.com/getuploadurl.jsp", null, function (result) {
			//alert(result.url);
			$('#posturl').val(result.url);
		}).error(function(response) {
			showErrorMessage("Failed to update upload URL, refresh your browser");
		});
	});
</script>

<style type="text/css">
.profile_pic {
  max-width: 100px;
  max-height: 100px;
  width: expression(this.width > 100 ? "100px" : true);
  height: expression(this.height > 100 ? "100px" : true);
}
</style>

<div class="content-wrapper left-sidebar top-border">
	<div id="account">
		<div class="sidebar fl">
      	<%= render 'menu', :selected_item => "edit_public_profile"%>
		</div>
		<div class="widecolumn fr">

			<h3>Edit Public Profile</h3>
			<%= flash_messages %>
			<p>
            The community wants to get to know you. Who is that brainiac writing those compliant,
            minified lines of code? Show youâ€™re really not a robot and write a little something
            about yourself. Note that the information you provide below is public and anyone
            can see it. Including your boss.</p>

			<div id="profile">
				<%= form_for "/account/public_profile", :name => "form_profile", :method => "post", :html => { :multipart => true } do |f| %>
				<!-- this is the app engine url we are posting to -->
				<input type="hidden" name="postUrl" id="posturl">
				
				<label>Profile Photo:</label>
				<div class="holder">
					<table>
					<tr>
						<td><img src="<%= @account["Profile_Pic__c"]%>" class="profile_pic"></td>
						<td><%= file_field 'form_profile', 'Profile_Pic__c', :class => 'file' %></td>
					</tr>
					</table>
				</div>
				<div class="spacer"></div>
				
				<label>Summary / Bio:</label>
				<div class="holder"><textarea name="form_profile[Summary_Bio__c]" rows="8" cols="40"><%= @account["Summary_Bio__c"]%></textarea></div>
				<div class="spacer"></div>

				<label>Quote:</label>
				<div class="holder"><textarea name="form_profile[Quote__c]" rows="8" cols="40"><%= @account["Quote__c"]%></textarea></div>
				<div class="spacer"></div>
				
				<label>Site / Blog:</label>
				<input name="form_profile[Website__c]" value="<%= @account["Website__c"]%>" class="field" style="width: 300px">
				<div class="spacer"></div>
				
				<label>Twitter:</label>
				<input name="form_profile[Twitter__c]" value="<%= @account["Twitter__c"]%>" class="field">
				<div class="spacer"></div>
				
				<label>GitHub:</label>
				<input name="form_profile[Github__c]" value="<%= @account["Github__c"]%>" class="field">
				<div class="spacer"></div>
				
				<label>Facebook:</label>
				<input name="form_profile[Facebook__c]" value="<%= @account["Facebook__c"]%>" class="field">
				<div class="spacer"></div>
				
				<label>LinkedIn:</label>
				<input name="form_profile[LinkedIn__c]" value="<%= @account["LinkedIn__c"]%>" class="field" style="width: 300px">
				<div class="spacer"></div>
				<% end %>
				
				<div id="button-container">
					<a class="button" onclick="document.forms[0].submit();"> <span>Submit</span></a>
				</div>

				
			</div>

		</div>

	</div>
</div>
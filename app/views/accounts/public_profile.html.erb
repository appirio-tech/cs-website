<div class="content-wrapper left-sidebar top-border">
	<div id="account">
		<div class="sidebar fl">
      	<%= render 'menu', :selected_item => "edit_public_profile"%>
		</div>
		<div class="widecolumn fr">

			<h3>Edit Public Profile</h3>
			<%= flash_messages %>
			<p>
            The community wants to get to know you. Who is that brainiac writing those compliant,
            minified lines of code? Show youâ€™re really not a robot and write a little something
            about yourself. Note that the information you provide below is public and anyone
            can see it. Including your boss.</p>

			<div id="profile">
				<%= form_for "/account/public_profile", :name => "form_profile", :method => "post", 
					:html => { :multipart => true, :id => 'submitForm' } do |f| %>
				<!-- this is the app engine url we are posting to -->
				<input type="hidden" name="form_profile[Profile_Pic__c]" id="imageURL">
				
				<label>Profile Photo:</label>
				<div class="holder">
					<table>
					<tr>
						<td valign="top"><img src="<%= @account["profile_pic"]%>" class="profile_pic" id="current_pic"></td>
						<td height="128"><!--<%= file_field 'form_profile', 'Profile_Pic__c', :class => 'file' %>-->
							<iframe src="http://cs-image-service.appspot.com" id="someIframe" width="400" height="125" frameborder="0">
						        <p>Your browser does not support iframes.</p>
						    </iframe>	
						</td>
					</tr>
					</table>
				</div>
				<div class="spacer"></div>
				
				<label>Summary / Bio:</label>
				<div class="holder"><textarea name="form_profile[Summary_Bio__c]" rows="8" cols="40"><%= @account["summary_bio"]%></textarea></div>
				<div class="spacer"></div>

				<label>Quote:</label>
				<div class="holder"><textarea name="form_profile[Quote__c]" rows="8" cols="40"><%= @account["quote"]%></textarea></div>
				<div class="spacer"></div>
				
				<label>Site / Blog:</label>
				<input name="form_profile[Website__c]" value="<%= @account["website"]%>" class="field" style="width: 400px">
				<div class="spacer"></div>
				
				<label>Twitter Username:</label>
				<input name="form_profile[Twitter__c]" value="<%= @account["twitter"]%>" class="field">
				<div class="spacer"></div>
				
				<label>GitHub Username:</label>
				<input name="form_profile[Github__c]" value="<%= @account["github"]%>" class="field">
				<div class="spacer"></div>
				
				<label>Facebook URL:</label>
				<input name="form_profile[Facebook__c]" value="<%= @account["facebook"]%>" class="field" style="width: 400px">
				<div class="spacer"></div>
				
				<label>LinkedIn URL:</label>
				<input name="form_profile[LinkedIn__c]" value="<%= @account["linkedin"]%>" class="field" style="width: 400px">
				<div class="spacer"></div>
				<% end %>
				
				<div id="button-container">
					<a class="button" onclick="document.forms[0].submit();"> <span>Submit</span></a>
				</div>

				
			</div>

		</div>

	</div>
</div>
= stylesheet_link_tag 'member'
= stylesheet_link_tag 'members'
.content-wrapper.left-sidebar.top-border
  #account
    .sidebar.fl
      = render 'menu', :selected_item => "school_work_info"

    .widecolumn.fr
      #account
        %h3 School & Work info
        %p
          Please consider filling out your school and work information. We will not reveal your information outside of CloudSpokes, but the additional demographic information is helpful when getting companies to post jobs to our job boards.
        .cl
        = form_tag("/account/school", :name => "form_school")
        %label.large
          Company:
        %input.txt.large{:maxlength => 180, :name => "form_school[company__c]", :value => @account["Company__c"]}
        .cl
        %label.large
          School/University:
        %input.txt.large{:maxlength => 180, :name => "form_school[school__c]", :value => @account["School__c"]}
        .cl
        %label.large
          Years of Experience:
        %input.txtsm{:maxlength => 100, :name => "form_school[years_of_experience__c]", :value => @account["Years_of_Experience__c"]}
        %label
        .cl
        %label.large
          Work Status:
        = select_tag("form_school[work_status__c]", options_for_select(work_options, @account["Work_Status__c"]) )
        .cl
        %label.large
          Shirt Size:
        = select_tag("form_school[shirt_size__c]", options_for_select(shirt_size_options, @account["Shirt_Size__c"]) )
        .cl
        %label.large
          Age Range:
        = select_tag("form_school[age_range__c]", options_for_select(age_range_options, @account["Age_Range__c"]) )
        .cl
        %label.large
          Gender:
        = select_tag("form_school[gender__c]", options_for_select(gender_options, @account["Gender__c"]) )
        .cl
        #button-right.buttons
          %div{:style => "float:left;padding-right:10px;"}
            %a.button{:href => "#", :onclick => "document['form_school'].submit()"}
              %span Submit
          %div{:style => "float:left"}
            %a.button{:href => "/account/a0GU0000000c8xiMAA/school"}
              %span Cancel





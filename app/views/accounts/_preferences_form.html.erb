<%= form_for('preferences', html: {:class => 'form-horizontal'}) do |f| %>

  <h4 style="padding-top:30px">General</h4>
  <table class="table table-striped table-condensed">
    <thead>
      <tr>
        <th></th>
        <th class='check-boxes'>Email</th>
        <th class='check-boxes'>Site</th>
      </tr>
    </thead>
    <tbody>
    <% Preference.column_names.each do |item| %>
      <tr>
        <td><%= f.label t(item) %></td>
        <td class='check-boxes'><%= preference_check_box_tags item %></td>
      </tr>
    <% end %>
    </tbody>
  </table>

  <h4 style="padding-top:30px">New Challenges by Category</h4>
  <table class="table table-striped table-condensed">
    <thead>
      <tr>
        <th></th>
        <th class='check-boxes'>Email</th>
        <th class='check-boxes'>Site</th>
      </tr>
    </thead>
    <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= label_tag category %></td>
        <td class='check-boxes'><%= category_check_box_tags category %></td>
      </tr>
    <% end %>
    </tbody>
  </table>

  <div id="button-container" style="margin-left:30px;padding-top:20px">
    <a class="button" onclick="document.forms[0].submit();"> <span>Submit</span></a>
  </div>
<% end %>

= stylesheet_link_tag 'member'
= stylesheet_link_tag 'members'

.content-wrapper.left-sidebar.top-border
  #account
    .sidebar.fl
      = render 'menu', :selected_item => "change_password"

    .widecolumn.fr
      #account
        %p.red
          =flash[:notice]
        %h3 Reset your password
        %p Use the passcode in the email being sent to you to reset your password below.
        %br
        .cl
        = form_tag("/account/password_reset", :name => "form_reset_password", :method => :post)
        %label
          %span
          Passcode:
        %input.txt{:maxlength => 100, :name => "form_reset_password[passcode]"}
        .cl
        %label
          %span
          New password:
        %input.txt{:maxlength => 100, :name => "form_reset_password[new_password]"}
        .cl
        %label
          %span
          New password:
        %input.txt{:maxlength => 100, :name => "form_reset_password[new_password_again]"}
        .cl
        %br
        #button-right.buttons
          %div{:style => "float:left;padding-right:10px;"}
            %a.button{:href => "#", :onclick => "document['form_reset_password'].submit()"}
              %span Submit





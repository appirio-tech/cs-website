<%= stylesheet_link_tag "member" %>
<%= stylesheet_link_tag "members" %>

<div class='content-wrapper two-cols-bg'>
  <div class='widecolumn fl'>
    <p><a href="/members/testmember1">Back</a></p>
	<div class="post-comment">
	    <h3>Post a Recommendation</h3>
	    <fieldset>
			<% if signed_in? %>
				<%= form_for :recommendation, :url => recommend_member_new_path do |f| %>
				  <%= f.text_area( :comments, :cols => "80", :rows => "12" )  %>
				  <br/>
				  <%= submit_tag("Post") %>
				<% end %>
			<% else %>
				Please login to post a comment.
			<% end %>
	    </fieldset>
	</div>
  </div>

<%= render "member-sidebar" %>
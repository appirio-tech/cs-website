	<div class="page-heading"><h2 class="melbourne">Leaderboards</h2></div>
        <div class="page">        
            <div class="categories">
				<table cellspacing="0" border="0" style="border-collapse:collapse;">
					<tr>
						<% @categories.each do |record| %>
						<td><li class="active"><a href="/leaderboard?category=<%= record['Name']%>">
							<span class="<% if params[:category].eql?(record['Name']) %>category-selected<% else %><%= record['Color__c']%><% end %>"><%= record['Name'] %></span></a></li></td>
						<% end %>
						<td><li class="active"><a href="/leaderboard" class="category-selected">
							<span class="<% if params[:category] %>black<% else %>category-selected<% end %>">all</span></a></li></td>
					</tr>
				</table>
            </div>	
        <!-- Content Wrapper -->
        <div class="challenge-content-wrapper ">
			<%= flash_messages %>
            <!-- Leaderboards -->
            <div id="leaderboards">
                <!-- Columns -->
                <div class="columns" style="padding-top: 15px">
                    <div class="column">
                        <h3>This Month</h3>
						<% if @this_month_leaders.length > 0 %>
	                        <%= render :partial => "leaderboard", :locals => { :leaders => @this_month_leaders } %>
	                        <p class="ac">
	                            <%= will_paginate @this_month_leaders, :param_name => :page_month %>
	                        </p>
						<% else %>
							<p style="padding-left:15px">No results found.</p>
						<% end %>
                    </div>

                    <div class="column column-middle">
                        <h3>This Year</h3>
						<% if @this_year_leaders.length > 0 %>
	                        <%= render :partial => "leaderboard", :locals => { :leaders => @this_year_leaders } %>
	                        <p class="ac">
	                            <%= will_paginate @this_year_leaders, :param_name => :page_year %>
	                        </p>
						<% else %>
							<p style="padding-left:15px">No results found.</p>
						<% end %>
                    </div>

                    <div class="column">
                        <h3>All Time</h3>
						<% if @this_year_leaders.length > 0 %>
	                        <%= render :partial => "leaderboard", :locals => { :leaders => @all_time_leaders } %>
	                        <p class="ac">
	                            <%= will_paginate @all_time_leaders, :param_name => :page_all %>
	                        </p>
						<% else %>
							<p style="padding-left:15px">No results found.</p>
						<% end %>
                    </div>

                    <div class="cl">&nbsp;</div>
                </div>
                <!-- END Columns -->
                <div class="cl">&nbsp;</div>
            </div>
            <!-- END Leaderboards -->
        </div>

        <!-- END Content Wrapper -->
    </div>

<ul>
	<li><h2><span><%= @challenge_detail["Name"] %></span></h2></li>
	
	<li><h3>Daily Prize</h3><h2><span><%= @challenge_detail["Top_Prize__c"] %></span></h2></li>
	
	<% if @todays_results %>
		<% rank = 0 %>
		<h3>Today's Leaderboard</h3>
		<div class="leaders">
		<ul>  	
		<% @todays_results.each do |record| %>
		<% rank=rank+1%>                               
		<span class="num<% if rank==1 %> num-gold<% elsif rank==2 %> num-silver<% elsif rank==3 %> num-bronze<% end %> fl"><%= rank %></span>
		  <div class="user-box box fl">
		      <div class="box-b">
		          <div class="box-t">
		              <a href='<%= member_url(record["Member__r"]["Name"]) %>' target="_blank" class="fl"><img src="<%= record["Member__r"]["Profile_Pic__c"] %>" Width="20px" Height="20px" style="border-width:0px;" /></a>
		              <div class="user-info fl">
		                  <h4><a href='<%= member_url(record["Member__r"]["Name"]) %>' target="_blank"><%= record["Member__r"]["Name"] %></a></h4>
		                   <span class="stats"><%= record["Number_Correct__c"] %> correct in <%= record["Total_Time__c"].to_i %> seconds</span>
		              </div>
		              <div class="cl"></div>
		          </div>
		      </div>
		  </div>
		  <div class="cl"></div>
		</li>
		<% end %>                            
		</ul>
		</div>
	<% end %>
		
	<li>
		<h3>Share</h3>
  		<!-- AddThis Button BEGIN -->
		<div class="addthis_toolbox addthis_default_style ">
		<a class="addthis_button_preferred_1"></a>
		<a class="addthis_button_preferred_2"></a>
		<a class="addthis_button_preferred_3"></a>
		<a class="addthis_button_preferred_4"></a>
		<a class="addthis_button_compact"></a>
		<a class="addthis_counter addthis_bubble_style"></a>
		</div>
		<script type="text/javascript" src="http://s7.addthis.com/js/300/addthis_widget.js#pubid=ra-4ee9c6ae01a87600"></script>
		<!-- AddThis Button END -->
		<div class="cl">&nbsp;</div>
	</li>
</ul>
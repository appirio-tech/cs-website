<div class="page two-cols-bg top-border">
<!-- Content Wrapper -->
        <div class="content-wrapper">
            <!-- Widecolumn -->
            <div class="widecolumn fl dvbulletedlist">
                <!-- Challenge Information -->
                <div class="challenge-information">
                    <span style="font-size:Small;font-weight:bold;"></span>
                    <h3>Technologies</h3>
                    <div class="list-technologies">
                        <ul>
                            <table cellspacing="0" border="0" style="border-collapse:collapse;">
								<tr>
									<% @categories.each do |record| %>	
									<td><li><a href="/challenges?category=<%= record %>"><span><%= record %></span></a></li></td>
									<% end %>                                
								</tr>
							</table>
                        </ul>
                    </div>

					<% if !@challenge_detail["Description__c"].nil? %>
                    <h3>Overview</h3>
                    <p><%= raw(@challenge_detail["Description__c"])%></p>
					<% end %>

					<% if !@challenge_detail["Requirements__c"].nil? %>
                    <h3>Challenge Requirements</h3>
                    <p><%= raw(@challenge_detail["Requirements__c"]) %></p>	
					<% end %>

					<% if !@challenge_detail["Submission_Details__c"].nil? %>
                    <h3>Submission Details</h3>
                    <p><%= raw(@challenge_detail["Submission_Details__c"]) %></p>
					<% end %>

					<% if !@challenge_detail["Additional_Info__c"].nil? %>
                    <h3>Additional Info</h3>
                    <p><%= raw(@challenge_detail["Additional_Info__c"]) %></p>
					<% end %>

					<% if @challenge_detail["Is_Open__c"].eql?("true") %>
					<% if signed_in? %>
	                    <div>
						<% if @participation_status[:status].eql?('Not Registered') %>
	                        <a class="button fl" href="<%= @challenge_detail["ID__c"] %>/register?challengeId=<%= @challenge_detail["Id"] %>">
		 					<span>Register</span></a>
	                        <a class="button fl" href="<%= @challenge_detail["ID__c"] %>/watch?challengeId=<%= @challenge_detail["Id"] %>">
							<span>Add to Watch List</span></a>    
						<% elsif @participation_status[:status].eql?('Watching') %>
	                        <a class="button fl" href="<%= @challenge_detail["ID__c"] %>/register?challengeId=<%= @challenge_detail["Id"] %>&current_status=Watching">
		 					<span>Register</span></a>
						<% elsif @participation_status[:status].eql?('Registered') %>
	                        <a class="button fl" href="<%= @challenge_detail["ID__c"] %>/submission">
							<span>Submit Your Entry</span></a>
						<% end %>                    
	                    </div>
					<% else %>
 	                   <div>
	                        <h3><span>Register or Login to submit for the contest</span></h3>
	                        <a class="button fl" href="<%= @challenge_detail["ID__c"] %>/register"> <span>Register</span></a>
	                        <a class="button fl" href="/login"> <span>Login</span></a>                        
	                    </div>
					<% end %>
					<% end %>

                </div><br/>

                <!-- END Challenge Information -->

                <!-- Discussion -->
                <div class="discussion recommendations">
                    <h2>Discussion</h2>
                    <!-- Box -->
                    <!-- Box -->
                    <%= render "discussion_box" %>
                    <!-- END Box -->

                    <!-- Reply Post -->
                    <%= render "discussion_box_reply" %>
                    <!-- END Reply Post -->

                    <div style="text-align: center"></div>
                    <!-- END Box -->
                    <!-- Post Comment -->
                    <div class="post-comment">
                        <h3>Post a Comment</h3>
                        <fieldset>
                            <span id="ctl00_Body_lblDiscussion"></span>
                            <span id="ctl00_Body_rfvUserName" style="color:Red;visibility:hidden;">Please specify comment</span><br />
                            <span id="ctl00_Body_revQuote" style="color:Red;visibility:hidden;">You cannot enter more than 5000 characters</span>
                            <div class="holder"><textarea name="ctl00$Body$txtComment" rows="8" cols="20" id="ctl00_Body_txtComment" cols="40"></textarea></div>
                            <div>
                                <div class="codelbl">Enter code:</div>
                                <div class="captchaCode">
                                    <input name="ctl00$Body$txtCaptchCode" type="text" maxlength="6" id="ctl00_Body_txtCaptchCode" class="field" style="height:20px;" />
                                </div>
                                <div class="captcha">
                                    <img id="ctl00_Body_imgCaptcha" src="JpegImage.aspx?id=1a665a18-59bf-4a77-a02f-152fba2a1bb2" style="border-width:0px;" />
                                </div>
                                <div class="captchaRefresh">
                                    <a onclick="javascript:refresh();return false;" id="ctl00_Body_lnkRefresh" href="javascript:__doPostBack(&#39;ctl00$Body$lnkRefresh&#39;,&#39;&#39;)">Refresh</a></div>
                                <div class="cl">
                                </div>
                            </div>
                            <a id="ctl00_Body_lnkComment" class="button" href="javascript:WebForm_DoPostBackWithOptions(new WebForm_PostBackOptions(&quot;ctl00$Body$lnkComment&quot;, &quot;&quot;, true, &quot;Comment&quot;, &quot;&quot;, false, true))">
                                <span>Post</span></a>
                            <div class="cl">&nbsp;</div>
                        </fieldset>
                    </div>
                    <!-- END Post Comment -->
                </div>
                <!-- END Discussion -->


            </div>
            <!-- END Widecolumn -->
            <!-- Sidebar -->
            <div class="sidebar fr">
                
				<!-- Challenge Sidebar -->
				<div class="challenge-sidebar">
				<%= render "challenge-sidebar" %>
				</div>
				<!-- END Challenge Sidebar -->

            </div>
            <!-- END Sidebar -->
            <div class="cl">&nbsp;</div>
        </div>
        <!-- END Content Wrapper -->
</div>

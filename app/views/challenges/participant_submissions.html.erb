<div class="page two-cols-bg top-border">
<!-- Content Wrapper -->
        <div class="challenge-content-wrapper">
            <!-- Widecolumn -->
            <div class="widecolumn fl">
                <!-- Challenge Registrants -->
                <span></span>
				<p><%= link_to "Back to Challenge Results", results_path %></p>
				<h3>Code and Resource Submissions for <%= @participant_name %></h3>
				<% if @all_submissions.length > 0 %>
				<table id="submissions-current">
				    <thead>
				    	<tr>
				        	<th scope="col">Media</th>
				  			<th scope="col">Comments</th>
				  			<th scope="col" style="width: 50px">Type</th>
				        </tr>
				    </thead>
				    <tbody>
						<% @all_submissions.each do |record| %>
							<% if record['Challenge_Participant__c'].eql?(params[:participant])%>
					    	<tr>
					        	<td><a href="<%= record['URL__c']%>" target="_blank"><%= record['URL__c'].split('/').last %></a></td>
					  			<td><%= record['Comments__c']%></td>
					  			<td><%= record['Type__c']%></td>
					        </tr>
							<% end %>
						<% end %>
				    </tbody>
				</table>
				<% else %>
					<p style="padding-bottom:200px">There are no submissions for this challenge.</p>
				<% end %>
                <!-- END List Members -->


                <!-- END Challenge Registrants -->
            </div>
            <!-- END Widecolumn -->
            <!-- Sidebar -->
            <div class="sidebar fr">
                
				<!-- Challenge Sidebar -->
				<div class="challenge-sidebar">
				<%= render "challenge-sidebar" %>
				</div>
				<!-- END Challenge Sidebar -->

            </div>
            <!-- END Sidebar -->
            <div class="cl">&nbsp;</div>
        </div>
        <!-- END Content Wrapper -->
</div>
